<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/approve_button_tableLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="15dip"
            android:stretchColumns="*" > 
            
            <TableRow
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" >

	            <Button
	                android:id="@+id/approve_button_imgbtnNext"
	                style="@style/button_text"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/imgbtn_disable"
	                android:minHeight="0dip"
	                android:layout_marginRight="10dip"
	                android:text="@string/lower_node_approve_button" />
	
	            <Button
	                android:id="@+id/approve_button_imgbtnPlus"
	                style="@style/button_text"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
	                android:background="@drawable/imgbtn_blue"
	                android:minHeight="0dip"
	                android:text="@string/plus_app_button" />
	
	            <Button
	                android:id="@+id/approve_button_imgbtnCopy"
	                style="@style/button_text"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:background="@drawable/imgbtn_blue"
	                android:minHeight="0dip"
	                android:text="@string/copy_app_button" />
            </TableRow>
        </TableLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingBottom="15dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:stretchColumns="*" >

            <Button
                android:id="@+id/approve_button_imgbtnApprove"
                style="@style/button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/imgbtn_blue"
                android:minHeight="0dip"
                android:text="@string/approve_imgbtnApprove" />
            
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>