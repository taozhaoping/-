<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/list_item_color_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/market_product_search_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/market_product_search_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#f2e1e1"
            android:gravity="center_vertical"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip" >

            <TextView
                android:id="@+id/market_product_search_FModel"
                style="@style/market_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="" />
        </RelativeLayout>

        <TextView
            android:id="@+id/market_product_search_FName"
            style="@style/market_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:text="" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*" >

            <TableRow
                android:gravity="center_vertical"
                android:paddingBottom="5dip"
                android:paddingTop="0dip" >

                <TextView
                    android:id="@+id/market_product_search_FFirstLine"
                    style="@style/market_product_line"
                    android:layout_width="1dip"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="" />

                <TextView
                    android:id="@+id/market_product_search_FSecLine"
                    style="@style/market_product_line"
                    android:layout_width="1dip"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linegray_left"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/market_product_search_FStandPrice"
            style="@style/market_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="0dip"
            android:text="" />
    </LinearLayout>

</RelativeLayout>