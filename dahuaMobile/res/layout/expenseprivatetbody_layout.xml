<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linegraye5_bottom"
        android:gravity="center_vertical"
        android:paddingBottom="5dip"
        android:paddingLeft="0dip"
        android:paddingRight="20dip"
        android:paddingTop="5dip" >

        <TextView
            android:id="@+id/expensePrivateTBodyInfo_FConSmDate"
            style="@style/iconstitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="" />
        
        <TextView
            android:id="@+id/expensePrivateTBodyInfo_FConSmType"
            style="@style/iconstitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/expensePrivateTBodyInfo_FConSmDate"
            android:layout_marginLeft="20dip"
            android:layout_centerVertical="true"
            android:text="" />
                
        <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toLeftOf="@+id/expensePrivateTBodyInfo_FAmount"
		    android:text="@string/engineering_165"
		    style="@style/iconsamount" />
                
        <TextView
            android:id="@+id/expensePrivateTBodyInfo_FAmount"
            style="@style/iconsamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:text="" />
    </RelativeLayout>

    <!-- 金额，项目，客户，事由 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linegray_bottom"
        android:paddingBottom="5dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:paddingTop="5dip" > 
        <TextView
            android:id="@+id/expensePrivateTBodyInfo_ProjectName"
            style="@style/iconstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/amount_3002"
            android:text="@string/expensePrivateTBodyInfo_ProjectName" />
        
        <TextView
            android:id="@+id/expensePrivateTBodyInfo_FProjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dip"
            android:layout_marginRight="10dip"
            android:text=""
            style="@style/iconscontent" />

        <TextView
            android:id="@+id/expensePrivateTBodyInfo_ClientName"
            style="@style/iconstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expensePrivateTBodyInfo_FProjectName"
            android:drawableLeft="@drawable/amount_2001"
            android:text="@string/expensePrivateTBodyInfo_ClientName" />

        <TextView
            android:id="@+id/expensePrivateTBodyInfo_FClientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expensePrivateTBodyInfo_FProjectName"
            android:layout_marginLeft="70dip"
            android:layout_marginRight="10dip"
            android:text="" 
            style="@style/iconscontent"/>

        <TextView
            android:id="@+id/expensePrivateTBodyInfo_Use"
            style="@style/iconstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expensePrivateTBodyInfo_FClientName"
            android:drawableLeft="@drawable/amount"
            android:text="@string/expensePrivateTBodyInfo_Use" />

        <TextView
            android:id="@+id/expensePrivateTBodyInfo_FUse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expensePrivateTBodyInfo_FClientName"
            android:layout_marginLeft="70dip"
            android:layout_marginRight="10dip"
            android:text=""
            style="@style/iconscontent" />
    </RelativeLayout>
   

</LinearLayout>