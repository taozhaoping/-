<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical"
    android:background="#f9f7dd">

     <ImageView
        android:id="@+id/guide_viewpager_imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/guide_viewpager2"/>
     
     <Button
        android:id="@+id/guide_viewpager_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:text="@string/guide_viewpager_start"
        style="@style/guide_viewpager_blue"
        android:background="@drawable/guide_viewpager_blue" />

</LinearLayout>
