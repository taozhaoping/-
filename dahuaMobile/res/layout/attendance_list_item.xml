<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    
    <RelativeLayout
        android:id="@+id/attendance_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dip"
        android:paddingLeft="0dip"
        android:paddingRight="0dip"
        android:paddingTop="5dip"
        android:stretchColumns="0" >
        
        <ImageView
            android:id="@+id/attendance_icon"
            style="@style/record_timetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
            android:src="@drawable/record_icon" />
        
        <RelativeLayout
            android:id="@+id/attendance_line1"             
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/attendance_icon"
	        android:paddingTop="0dip"
	        android:paddingBottom="0dip">
            
            <TextView
	            android:id="@+id/attendance_list_item_FCheckInTime"
	            style="@style/record_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="5dip"
	            android:layout_centerVertical="true"
	            android:text="" />
	
	        <TextView
	            android:id="@+id/attendance_list_item_FAmResult"
	            style="@style/record_timetext"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@+id/attendance_list_item_FCheckInTime"
	            android:text="" />
	        
	        <RelativeLayout
	            android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="115dip"
                android:paddingLeft="15dip"
	            android:layout_centerVertical="true"
                android:background="@drawable/record_line" >
                
	            <TextView
		            android:id="@+id/attendance_list_item_FType"
		            style="@style/record_timeline"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:paddingTop="3dip"
	                android:paddingBottom="3dip"
		            android:text=""  />
	            
	            <TextView
		            android:id="@+id/attendance_list_item_FAttendanceDate"
		            style="@style/record_dateline"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="5dip"
		            android:text=""/>
	            
	        </RelativeLayout>
            
        </RelativeLayout>
        
        
        <RelativeLayout 
            android:id="@+id/attendance_line2"            
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/attendance_icon"
	        android:layout_below="@+id/attendance_line1"
	        android:paddingTop="2dip"
	        android:paddingBottom="1dip">
	        
	        <TextView
	            android:id="@+id/attendance_list_item_FCheckOutTime"
	            style="@style/record_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="5dip"
	            android:layout_centerVertical="true"
	            android:text="" />
	
	        <TextView
	            android:id="@+id/attendance_list_item_FPmResult"
	            style="@style/record_timetext"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@+id/attendance_list_item_FCheckOutTime"
	            android:text="" />
	        
	     </RelativeLayout>
        
    </RelativeLayout>

</RelativeLayout>