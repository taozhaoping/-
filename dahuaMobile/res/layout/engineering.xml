<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <!-- 中间结束 -->

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:fadingEdge="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <!-- 单据编码 -->

            <RelativeLayout
                android:id="@+id/engineering_list1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/linegraye5_bottom"
                android:gravity="center_vertical"
                android:paddingBottom="5dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="5dip" >

                <TextView
                    android:id="@+id/engineering_No"
                    style="@style/icons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/engineering_No" />

                <TextView
                    android:id="@+id/engineering_FBillNo"
                    style="@style/icons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/engineering_No"
                    android:text="" />
            </RelativeLayout>

            <!-- 申请人申请时间 -->

            <TableLayout
                android:id="@+id/engineering_list2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/engineering_list1"
                android:background="@drawable/linegray_bottom"
                android:stretchColumns="*" >

                <TableRow
                    android:gravity="center_vertical"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip" >

                    <TextView
                        android:id="@+id/engineering_FApplyName"
                        style="@style/icons"
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/user"
                        android:paddingLeft="20dip"
                        android:text="" />

                    <TextView
                        android:id="@+id/engineering_FApplyDate"
                        style="@style/icons"
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/linegray_left"
                        android:drawableLeft="@drawable/clock"
                        android:paddingLeft="10dip"
                        android:text="" />
                </TableRow>
            </TableLayout>

            <!-- 工程商名称 -->

            <RelativeLayout
                android:id="@+id/engineering_list3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/engineering_list2"
                android:background="@drawable/linegraye5_bottom"
                android:gravity="center_vertical"
                android:paddingBottom="5dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="5dip" >

                <TextView
                    android:id="@+id/engineering_FEngineereName"
                    style="@style/iconstitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="" />
            </RelativeLayout>

            <!-- 金额，地址，联系人，电话 -->

            <RelativeLayout
                android:id="@+id/engineering_list4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/engineering_list3"
                android:background="@drawable/linegray_bottom"
                android:paddingBottom="5dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="5dip" >

                <TextView
                    android:id="@+id/engineering_Amount"
                    style="@style/iconstext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/amount"
                    android:text="@string/engineering_Amount" />

                <TextView
                    android:id="@+id/engineering_165"
                    style="@style/iconsamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/engineering_Amount"
                    android:text="@string/engineering_165" />

                <TextView
                    android:id="@+id/engineering_FAmount"
                    style="@style/iconsamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/engineering_165"
                    android:text="" />

                <TextView
                    android:id="@+id/engineering_FAddress"
                    style="@style/icons"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/engineering_FAmount"
                    android:drawableLeft="@drawable/address"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:text="" />

                <TextView
                    android:id="@+id/engineering_FContact"
                    style="@style/icons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/engineering_FAddress"
                    android:drawableLeft="@drawable/tel"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:text="" />

                <TextView
                    android:id="@+id/engineering_FTel"
                    style="@style/iconstel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/engineering_FAddress"
                    android:layout_toRightOf="@+id/engineering_FContact"
                    android:text="" />
            </RelativeLayout>

            <!-- 圈定类型  圈定给谁 -->

            <TableLayout
                android:id="@+id/engineering_list5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/engineering_list4"
                android:background="@drawable/linegraye5_bottom"
                android:stretchColumns="*" >

                <TableRow
                    android:gravity="center_vertical"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip" >

                    <TextView
                        android:id="@+id/engineering_ComboBox"
                        style="@style/icons"
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dip"
                        android:text="@string/engineering_ComboBox" />

                    <TextView
                        android:id="@+id/engineering_Base1"
                        style="@style/icons"
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dip"
                        android:text="@string/engineering_Base1" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/engineering_list6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/engineering_list5"
                android:background="@drawable/linegray_bottom"
                android:stretchColumns="*" >

                <TableRow
                    android:gravity="center_vertical"
                    android:paddingBottom="20dip"
                    android:paddingTop="20dip" >

                    <TextView
                        android:id="@+id/engineering_FComboBox"
                        style="@style/icons"
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/number"
                        android:paddingLeft="20dip"
                        android:text="" />

                    <TextView
                        android:id="@+id/engineering_FBase1"
                        style="@style/icons"
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/linegray_left"
                        android:drawableLeft="@drawable/user"
                        android:paddingLeft="10dip"
                        android:text="" />
                </TableRow>
            </TableLayout>
            <!-- 圈定升级 -->

            <TableLayout
                android:id="@+id/engineering_list7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/engineering_list6"
                android:background="@drawable/linegraye5_bottom"
                android:stretchColumns="*" >

                <TableRow
                    android:gravity="center_vertical"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip" >

                    <TextView
                        android:id="@+id/engineering_Text"
                        style="@style/icons"
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dip"
                        android:text="@string/engineering_Text" />

                    <TextView
                        android:id="@+id/engineering_ComboBox1"
                        style="@style/icons"
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dip"
                        android:text="@string/engineering_ComboBox1" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/engineering_list8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/engineering_list7"
                android:background="@drawable/linegray_bottom"
                android:stretchColumns="*" >

                <TableRow
                    android:gravity="center_vertical"
                    android:paddingBottom="20dip"
                    android:paddingTop="20dip" >

                    <TextView
                        android:id="@+id/engineering_FText"
                        style="@style/icons"
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dip"
                        android:paddingRight="10dip"
                        android:text="" />

                    <TextView
                        android:id="@+id/engineering_FComboBox1"
                        style="@style/icons"
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/linegray_left"
                        android:paddingLeft="10dip"
                        android:paddingRight="20dip"
                        android:text="" />
                </TableRow>
            </TableLayout>

            <!-- 原因说明 -->

            <RelativeLayout
                android:id="@+id/engineering_list9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/engineering_list8"
                android:background="@drawable/linegraye5_bottom"
                android:gravity="center_vertical"
                android:paddingBottom="5dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="5dip" >

                <TextView
                    android:id="@+id/engineering_Note"
                    style="@style/icons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/engineering_Note" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/engineering_list10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/engineering_list9"
                android:background="@drawable/linegray_bottom"
                android:paddingLeft="20dip"
                android:paddingRight="20dip" >

                <TextView
                    android:id="@+id/engineering_FNote"
                    style="@style/icons"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dip"
                    android:paddingTop="15dip"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/engineering_list11"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/engineering_list10"
                android:paddingBottom="10dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="10dip" >

                <Button
                    android:id="@+id/approve_imgbtnApprove"
                    style="@style/button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/imgbtn_blue"
                    android:minHeight="0dip"
                    android:text="@string/approve_imgbtnApprove" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <!-- 中间结束 -->

</LinearLayout>