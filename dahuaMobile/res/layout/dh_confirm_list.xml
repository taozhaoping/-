<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/dh_comfirm_list_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#e9e9e9"
        android:paddingBottom="10dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:paddingTop="10dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corners_bg_white" >

            <EditText
                android:id="@+id/dh_confirm_list_search_EditText"
                style="@style/cot_search"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dh_week_search"
                android:singleLine="true"
                android:textColorHint="#aaaaaa" />

            <ImageButton
                android:id="@+id/dh_confirm_list_search_ImageButton"
                android:layout_width="60dip"
                android:layout_height="22dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dip"
                android:layout_marginTop="8dip"
                android:background="@null"
                android:paddingLeft="30dip"
                android:src="@drawable/btn_search" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dh_comfirm_list_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingBottom="0dip"
        android:paddingLeft="40dip"
        android:paddingRight="40dip"
        android:paddingTop="0dip" >

        <TableLayout
            android:id="@+id/dh_comfirm_list_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*" >

            <TableRow
                android:gravity="center_vertical"
                android:paddingBottom="15dip"
                android:paddingTop="15dip" >

                <Button
                    android:id="@+id/dh_comfirm_list_btnSelect"
                    style="@style/button_text"
                    android:layout_width="1dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:background="@drawable/imgbtn_blue"
                    android:minHeight="0dip"
                    android:text="@string/dh_confrim_list_selectAll" />

                <Button
                    android:id="@+id/dh_comfirm_list_btnOk"
                    style="@style/button_text"
                    android:layout_width="1dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:background="@drawable/imgbtn_red"
                    android:minHeight="0dip"
                    android:text="@string/dh_confrim_list_ensure" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/dh_comfirm_list_FWeekIndex"
        style="@style/calendar_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dip"
        android:gravity="center_vertical"
        android:text="" />

    <ExpandableListView
        android:id="@+id/dh_confirm_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:layout_marginTop="0dip"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:drawSelectorOnTop="false"
        android:groupIndicator="@null"
        android:scrollbars="vertical" >
    </ExpandableListView>

</LinearLayout>