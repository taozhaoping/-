<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ebf1f5"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dh_confirm_list_person_child"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="20dip"
            android:layout_height="2.5dip"
            android:layout_marginTop="22dip"
            android:background="#ebf1f5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="15dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dh_confirm_list_person_child_FWeekDay"
                style="@style/calendar_item_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dip"
                android:paddingLeft="0dip"
                android:paddingRight="10dip"
                android:paddingTop="15dip"
                android:text="" />

            <TextView
                android:id="@+id/dh_confirm_list_person_child_FHours"
                style="@style/time_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dip"
                android:paddingLeft="0dip"
                android:paddingRight="0dip"
                android:paddingTop="15dip"
                android:text="" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>