<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff"  >
    
    <!-- 中间部分 -->
        <TableLayout
         android:id="@+id/expense_itemview_StartTime" 
         android:layout_width="fill_parent"  
         android:layout_height="wrap_content"
         android:background="@drawable/linegraye5_bottom"
         android:stretchColumns="*"  >
        <TableRow
         android:paddingTop="5dip"
         android:paddingBottom="5dip"
         android:gravity="center_vertical" >

         <TextView
            android:id="@+id/expense_itemview_ivStartTime"
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:paddingLeft="20dip"
            android:text="@string/expense_startDate"
            style="@style/icons"/>   
         <TextView
            android:id="@+id/expense_itemview_tvEndTime"
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:text="@string/expense_endDate"
            style="@style/icons" />   
        </TableRow>
    </TableLayout>
    <TableLayout
         android:id="@+id/expense_itemview_EndTime" 
         android:layout_width="fill_parent"  
         android:layout_height="wrap_content"
         android:layout_below="@+id/expense_itemview_StartTime"
         android:background="@drawable/linegray_bottom"
         android:stretchColumns="*"  >
        <TableRow
         android:paddingTop="20dip"
         android:paddingBottom="20dip"
         android:gravity="center_vertical" >

         <TextView
                android:id="@+id/expense_itemview_ivTvStartTime"
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/calendar"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:text="" 
                android:background="@null"
                style="@style/icons" /> 
                 
            <TextView
                android:id="@+id/expense_itemview_ivTvEndTime"
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/calendar"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:text=""
                style="@style/icons"
                android:background="@drawable/linegray_left"  />   
        </TableRow>
    </TableLayout>
        
         <RelativeLayout
            android:id="@+id/expense_itemview_StartPos"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expense_itemview_EndTime"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip" 
            android:background="@drawable/linegraye5_bottom">

            <TextView
                android:id="@+id/expense_itemview_ivStartPos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expense_startAddress"
                style="@style/icons" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/expense_itemview_editStartPos"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expense_itemview_StartPos"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"
            android:background="@drawable/linegray_bottom">
            <TextView
                android:id="@+id/expense_itemview_ivTvStartPos"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/dot"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:text=""
                android:background="@null"
                style="@style/icons" />
         </RelativeLayout>
         
         <RelativeLayout
            android:id="@+id/expense_itemview_EndPos"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expense_itemview_editStartPos"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip" 
            android:background="@drawable/linegraye5_bottom">

            <TextView
                android:id="@+id/expense_itemview_tvEndPos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expense_endAddress"
                style="@style/icons" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/expense_itemview_editEndPos"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expense_itemview_EndPos"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"
            android:background="@drawable/linegray_bottom">
            <TextView
                android:id="@+id/expense_itemview_ivTvEndPos"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/dot"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:text=""
                android:background="@null"
                style="@style/icons" />
         </RelativeLayout>
         <RelativeLayout
            android:id="@+id/expense_itemview_Amount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expense_itemview_editEndPos"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip" 
            android:background="@drawable/linegraye5_bottom">

            <TextView
                android:id="@+id/expense_itemview_tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expense_amount"
                style="@style/icons" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/expense_itemview_editAmount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expense_itemview_Amount"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:background="@drawable/linegray_bottom">
            <TextView
                android:id="@+id/expense_itemview_ivTvAmount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/amount_2014"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:text=""
                android:background="@null"
                style="@style/iconsamount" />
         </RelativeLayout>
         <!-- 底部 -->
         <TableLayout
                 android:id="@+id/expense_itemview_button" 
                 android:layout_width="fill_parent"  
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:stretchColumns="*"  >                 
                 <TableRow
                     android:paddingTop="10dip"
                     android:paddingBottom="10dip"
                     android:gravity="center_vertical" >

                 <Button
                     android:id="@+id/expense_itemview_imgbtnSave"
                     android:layout_width="1dip"
                     android:layout_height="wrap_content"
                     android:layout_marginRight="5dip"
                     android:layout_marginLeft="10dip"
                     android:minHeight="0dip"
                     android:text="@string/expense_itemview_upload"
                     android:background="@drawable/imgbtn_blue"
                     style="@style/button_text"/>
                 
                 <Button
                     android:id="@+id/expense_itemview_imgbtnReject"
                     android:layout_width="1dip"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="5dip"
                     android:layout_marginRight="10dip"
                     android:minHeight="0dip"
                     android:text="@string/expense_itemview_edit"
                     android:background="@drawable/imgbtn_red"
                     style="@style/button_text"/>         
                 </TableRow>
             </TableLayout>

</RelativeLayout>
